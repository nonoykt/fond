<!DOCTYPE html>
<html>
  <head>
    <title>FOND</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-trank': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-trank': 'reload' %>
  </head>

  <body>
    <%= render template: "layouts/header" %>
    <div class="notification">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= yield %>
    <%= render template: "layouts/footer" %>
  </body>
</html>
