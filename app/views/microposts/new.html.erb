<% provide(:title, 'ニューポスト') %>
<div class="container_Main">
  <div class="micropost_form">
    <%= form_with model: @micropost do |f| %>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content, autofocus: true, maxlength:"140", class: "form-text-area" %>
      </div>
      <div class="field">
        <% if @micropost.image? %>
          <div class="micropost_image">
            <% image_tag @micropost.image.url %>
          </div>
        <% end %>
        <%= f.label :image %><br>
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png', class: 'button btn_image' %>
        <%= f.hidden_field :image_cache, class: 'button btn_image' %>
      </div><br>
      <div class="field">
      </div>
      <div class="action">
        <%= f.submit nil, class: 'button btn_submit' %>
      </div>
    <% end %>
  </div>
</div>